<section class="w-full px-5 text-gray-700 sm:px-10 ">
  <div class="grid grid-cols-1 gap-x-5 gap-y-7 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 xxl:grid-cols-5 ">
    <% @rooms.each do |room| %>
      <div class="relative card-carousel-container">
        <div data-controller="carousel" class="relative flex-grow mx-auto rounded-lg swiper-container mySwiper ">
          <div class="absolute z-10 flex flex-col w-full h-full p-3">
            <i class="self-end text-2xl text-center fa-solid fa-heart opacity-60 hover:opacity-80" ></i>
            <div class="flex self-center justify-between w-full my-auto ">
              <div class="flex items-center justify-center w-8 h-8 bg-white rounded-full opacity-50 hover:opacity-100 "
            data-action="carousel#prev">
                <i class="text-gray-700 fa-solid fa-chevron-left"></i>
              </div>
              <div class="flex items-center justify-center w-8 h-8 bg-white rounded-full opacity-50 hover:opacity-100 "
            data-action="click->carousel#next">
                <i class="text-gray-700 fa-solid fa-chevron-right"></i>
              </div>
            </div>
          </div>
          <div class="relative swiper-wrapper">
            <div class="swiper-slide">
              <img src="https://fakeimg.pl/250x200/" alt="" class="object-cover w-full aspect-ratio " >
            </div>
            <div class="swiper-slide">
              <img src="/assets/house.jpeg" alt="" class="object-cover w-full aspect-ratio "  >
            </div>
            <div class="swiper-slide" >
              <img src="https://fakeimg.pl/400x600/" alt="" class="object-cover w-full aspect-ratio "  >
            </div>
            <div class="swiper-slide" >
              <img src="https://fakeimg.pl/800x600/" alt="" class="object-cover w-full aspect-ratio "  >
            </div>
          </div>
        </div>
        <div class="flex flex-row justify-between m-2 ">
          <div class="">
            <div class="text-lg font-bold"><%=room.summary%></div>
            <div class="mt-0.5 text-gray-500 "><%=room.room_type%></div>
            <div class="mt-0.5 text-gray-500 text-sm ">
              <%=room.checkin_start_at.strftime("%m月%d日")%>
              <span class="mx-1">至</span>
              <%=room.checkin_end_at.strftime("%m月%d日")%></div>
            <div class="mt-0.5">
              <span class="mr-0.5 text-md"><%=number_to_currency(room.price, negative_format: "(%u%n)",precision:0)%></span>
              <span class="mr-0.5 text-sm">TWD</span>
              <span class="text-sm">晚</span></div>
          </div>
          <div class="flex items-start justify-end ">
            <i class="mt-1 mr-1 text-sm fa-solid fa-star "></i>
            <p class="inline-block text-md ">4.87</p>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</section>
<div class="px-16">
  <table class="w-4/5 border border-slate-400">
    <thead>
      <tr>
        <th class="p-2 bg-gray-200 border border-slate-300">ID</th>
        <th class="w-2/3 p-2 bg-gray-200 border border-slate-300">介紹</th>
        <th class="w-1/6 p-2 bg-gray-200 border border-slate-300">價格</th>
        <th class="p-2 bg-gray-200 border border-slate-300">Action</th>
      </tr>
    </thead>
    <tbody>
      <% @rooms.reverse.each do |room| %>
        <tr>
          <td class="p-1 border border-slate-300"><%= room.id %></td>
          <td class="p-1 border border-slate-300"><%= room.summary %></td>
          <td class="p-1 border border-slate-300">$<%= room.price %></td>
          <td class="p-1 border border-slate-300">
            <button class="px-2 py-1 text-white bg-green-500 rounded"><%= link_to "編輯", edit_room_path(room) %></button>
            <button class="px-2 py-1 text-white bg-red-400 rounded"><%= link_to "刪除", room_path(room), method: "DELETE", data:{ confirm: "確定要刪除嗎？"} %></button>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
