<%= form_with(model: room) do |room| %>
  <div class="flex flex-col gap-5 ">
    <div class="flex w-full gap-5">
      <div class="flex flex-col w-full gap-1">
        <div class="flex items-center w-full gap-1 font-medium">
          <p class="text-sm text-red-700 align-middle ">*</p>
          <%= room.label :home_type, "房源類型"%>
        </div>
        <%= room.select :home_type, options_for_select(Room.home_types.keys), {prompt: '選擇房源類型'}, class:"input"%>
      </div>
      <div class="flex flex-col w-full gap-1">
        <div class="flex items-center w-full gap-1 font-medium ">
          <p class="text-sm text-red-700 align-middle ">*</p>
          <%= room.label :room_type, "房間類型" %>
        </div>
        <%= room.select :room_type, options_for_select(Room.room_types.keys), {prompt: '選擇房間類型'}, class:"input"%>
      </div>
    </div>
    <div class="flex gap-3 ">
      <div class="grid w-full grid-cols-3 gap-5">
        <div class="flex flex-col w-full gap-1">
          <div class="flex items-center gap-1 font-medium">
            <p class="text-sm text-red-700 align-middle ">*</p>
            <%= room.label :max_occupancy, "可容納人數" %>
          </div>
          <%= room.number_field :max_occupancy, in: 1..30, class:"input"%>
        </div>
        <div class="flex flex-col w-full gap-1">
          <div class="flex items-center gap-1 font-medium">
            <p class="text-sm text-red-700 align-middle ">*</p>
            <%= room.label :bedrooms, "臥房數 " %>
          </div>
          <%= room.number_field :bedrooms, in: 1..10, class:"input"%>
        </div>
        <div class="flex flex-col w-full gap-1">
          <div class="flex items-center gap-1 font-medium">
            <p class="text-sm text-red-700 align-middle ">*</p>
            <%= room.label :bathrooms, "衛浴間數"%>
          </div>
          <%= room.number_field :bathrooms, in: 1..100, class:"input"%>
        </div>
      </div>
    </div>
    <div class="flex flex-col">
      <p class="mb-1 font-medium ">設備提供</p>
      <div class="flex flex-wrap gap-5 font-medium">
        <div class="flex items-center gap-0.5 cursor-pointer ">
          <%= room.check_box :has_bathtub, class:"checkbox"%>
          <%= room.label :has_bathtub, "浴缸" %>
        </div>
        <div class="flex items-center gap-0.5 cursor-pointer ">
          <%= room.check_box :has_kitchen, class:"checkbox"%>
          <%= room.label :has_kitchen, "廚房" %>
        </div>
        <div class="flex items-center gap-0.5 cursor-pointer ">
          <%= room.check_box :has_air_con, class:"checkbox"%>
          <%= room.label :has_air_con, "空調" %>
        </div>
        <div class="flex items-center gap-0.5 cursor-pointer ">
          <%= room.check_box :has_wifi, class:"checkbox"%>
          <%= room.label :has_wifi, "wifi",class:"tracking-wide" %>
        </div>
      </div>
    </div>
    <div class="flex flex-col w-full gap-1">
      <div class="flex items-center gap-1 font-medium ">
        <p class="text-sm text-red-700 align-middle ">*</p>
        <%= room.label :summary, "房間簡介" %>
      </div>
      <%= room.text_area :summary, class:"input h-28 resize-none overflow-y-scroll"%>
    </div>
    <div class="flex flex-col w-full gap-1">
      <div class="flex items-center gap-1 font-medium">
        <p class="text-sm text-red-700 align-middle ">*</p>
        <%= room.label :address, "地址" %>
      </div>
      <%= room.text_field :address, class:"input"%>
    </div>
    <div class="flex flex-col w-full gap-1">
      <div class="flex items-center gap-1 font-medium">
        <p class="text-sm text-red-700 align-middle ">*</p>
        <%= room.label :price, "每晚價格" %>
      </div>
      <%= room.number_field :price, in: 1..100000, class:"input"%>
    </div>
    <div class="flex flex-col w-full gap-1">
      <div>
        <div class="flex items-center gap-1 font-medium">
          <p class="text-sm text-red-700 align-middle ">*</p>
          <%= room.label :checkin_start_at, "可登記時間" %>
          <p class="text-sm font-normal text-gray-400 ">需要3個小時以上時間供旅人入住</p>
        </div>
      </div>
      <div class="flex gap-5 font-midium">
        <div class="flex items-center gap-2 w-content">
          <p class="font-medium">從</p>
          <%= room.time_field :checkin_start_at, class:"input cursor-pointer",value:"%H:%M",onfocus:"this.showPicker()"%>
        </div>
        <div class="flex items-center gap-2 w-content ">
          <p class="font-medium">到</p>
          <%= room.time_field :checkin_end_at, class:"input cursor-pointer",value:"%H:%M",onfocus:"this.showPicker()"%>
        </div>
      </div>
    </div>
    <div class="flex flex-col w-full gap-1">
      <div class="flex items-center gap-1 font-medium">
        <p class="text-sm text-red-700 align-middle ">*</p>
        <%= room.label :checkout_time, "退房時間" %>
      </div>
      <%= room.time_field :checkout_time,value:"%H:%M", class:"input",onfocus:"this.showPicker()"%>
    </div>
    <div class="flex items-center gap-2">
      <%= room.label :photos, '上傳圖片', class:"font-medium"%>
      <%= room.file_field :photos, multiple: true %>
    </div>
    <div>
      <%= room.submit form_submit_text, class:"px-4 py-2 font-semibold text-white bg-pink-500 rounded-lg shadow-md hover:bg-pink-700  focus:ring-2  focus:ring-opacity-75"%>
    </div>
  </div>
<% end %>
