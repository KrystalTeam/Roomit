<h1>新增評價</h1>
<%= form_with(model: @review, url: reviews_path, method: "post") do |f| %>
<div>
  <%= f.label :comment, "留言" %>
  <%= f.text_area :comment %>
</div>
<div>
  <%= f.label :rating, "評價" %>
  <%= f.number_field :rating %>
</div>
<div>
  <%= f.label :reviews_date, "留言日期" %>
  <%= f.date_field :reviews_date %>
</div>

  <button class="border-solid border-2 bg-pink-300 ring-offset-4 rounded-full py-1 px-4 hover:bg-green-200">    
    <%= f.submit %></button>  
<% end %>

<br />
<%=link_to '回評價頁面', reviews_path %>
