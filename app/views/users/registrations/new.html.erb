<div class="p-5 mx-auto text-left rounded-lg shadow-lg max-w-568">
  <div class="flex items-center justify-between mb-2">
    <div class="w-8 fix-block"></div>
    <p class="text-lg font-medium text-gray-700">註冊Roomit</p>
    <button class="w-8 h-8 rounded-full hover:bg-gray-200">
      <i class="text-2xl text-gray-700 i-center fa-solid fa-xmark"></i>
    </button>
  </div>
  <form action="/users" method="POST">
    <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>"/>
    <div class="flex flex-col gap-4">
      <div>
        <label class="block" for="email">電子信箱</label>
        <input id="email " name="user[email]" type="email" placeholder="輸入電子信箱" class="input"/>
      </div>
      <div>
        <label class="block">密碼</label>
        <input id="password " name="user[password]" type="password" placeholder="輸入密碼" class="input"/>
      </div>
      <div>
        <label class="block">確認密碼</label>
        <input id="password_confirm" name="user[password_confirmation]" type="password" placeholder="再次輸入密碼" class="input"/>
      </div>
    </div>
    <div class="mt-3 rounded-lg bg-color-main bg-color-main-hover">
      <button type="submit"name="commit" value="Sign up" data-disable-with="Sign up" class="w-full px-6 py-3 font-bold text-white">註冊帳號
      </button>
    </div>
  </form>
</div>
