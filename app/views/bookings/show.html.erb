<div class="w-full px-10 text-gray-700 xl:px-56">
  <div class="flex flex-col gap-10 px-20 py-10">
    <div class="flex items-center justify-between w-full">
      <div class="flex flex-col justify-between gap-1">
        <h2 class="text-2xl font-bold bg-white"> <%= @booking.room.address%></h2>
        <span class="text-lg font-bold">
          預訂人：<%= @booking.user.name%>
        </span>
        <span class="text-lg">
          <%= @booking.created_at.strftime("%Y年%m月%d日")%>
        </span>
      </div>
      <%= image_tag "logo_small.svg",class:"h-7 lg:h-16" %>
    </div>
    <!-- detail -->
    <div class="flex flex-col gap-5 p-5 bg-white border-2 rounded-md shadow-md">
      <div class="flex items-center justify-between py-10 border-b border-gray-300">
        <div class="flex flex-col">
          <span class="gap-1 font-bold text-gray-500">入住</span>
          <span class="text-2xl font-bold">
            <%= @booking.start_at.strftime("%Y年%m月%d日")%>
          </span>
        </div>
        <i class="text-lg text-gray-700 fa-solid fa-chevron-right"></i>
        <div class="flex flex-col items-end gap-1">
          <span class="font-bold text-gray-500">退房</span>
          <span class="text-2xl font-bold">
            <%= @booking.end_at.strftime("%Y年%m月%d日")%>
          </span>
        </div>
      </div>
      <div class="text-xl font-bold w-fit">
        <%= @booking.room.room_type%>
        <span> - </span>
        <%= @booking.room.home_type%>
      </div>
      <div>
        <div>
          房東：
          <%= @booking.room.user.name%>
        </div>
        <div>
          地址：
          <%= @booking.room.address%>
        </div>
        <div>
          每晚價格：
          <%= @booking.price_per_night%>
        </div>
        <div>
          人數：
          <%= @booking.headcount%>
        </div>
      </div>
      <%= @booking.state%>
    </div>
    <!-- detail_end -->
  </div>
</div>
<%= form_with(model: @review, url:create_review_booking_path) do |review| %>
  <%= review.hidden_field :user_id, value: current_user.id %>
  <%= review.hidden_field :room_id, value: @booking.room_id %>
  <%= review.hidden_field :review_to, value:"room"%>
  <%= review.text_field :comment, class:"input h-28 resize-none overflow-y-scroll"%>
  <%= review.select :review_to,options_for_select(Review.review_tos.keys,'0')%>
  <%= review.select :accuracy_rating,options_for_select(Review.accuracy_ratings.keys,'5'),{}, class:"input"%>
  <%= review.select :accuracy_rating,options_for_select(Review.accuracy_ratings.keys,'5'),{}, class:"input"%>
  <%= review.select :check_in_rating,options_for_select(Review.check_in_ratings.keys,'5'),{}, class:"input"%>
  <%= review.select :cleanliness_rating,options_for_select(Review.cleanliness_ratings.keys,'5'),{}, class:"input"%>
  <%= review.select :communication_rating,options_for_select(Review.communication_ratings.keys,'5'),{}, class:"input"%>
  <%= review.select :location_rating,options_for_select(Review.location_ratings.keys,'5'),{}, class:"input"%>
  <%= review.select :value_rating,options_for_select(Review.value_ratings.keys,'5'),{}, class:"input"%>
  <%= review.submit class:"border p-2 block font-bold text-gray-400 bg-white w-fit rounded-xl hover:text-gray-500" do %>
    送出
  <%end%>
<%end %>
