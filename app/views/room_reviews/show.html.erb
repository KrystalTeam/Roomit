<% if @roomreview %>

<input class="w-full px-5 sm:px-10 ">
  <div class="lg:flex"> 
    <div>
     <div class="flex justify-between flex-nowrap">
      <div class="flex">
        <div class="flex mr-2">
          <i class="text-lg fa-solid fa-star"></i>
          <p>4.79</p>
        </div>
          <div>42則評價</div>
       </div> 
    </div>
     
    <div> 
     <div class="md:flex">
      <div>
        <div>乾淨度: <%= roomreview.cleanliness_rating %></div>
        <div>溝通: <%= roomreview.communication_rating %></div>
        <div>前台登記體驗: <%= roomreview.check_in_rating %></div>
      </div>
      <div>
        <div>準確性: <%= roomreview.accuracy_rating %></div>
        <div>位置: <%= roomreview.location_rating %></div>
        <div>性價比: <%= roomreview.value_rating %></div>
        <div>評論: <%= roomreview.comment %></div>
      </div>
    </div>    
   </div>
   
    <div>
      <input class="rounded-lg">搜尋評價</input>
      <div class="pr-6">
        <div class="px-2 py-2 border rounded-lg">
          <div class="flex mt-2 mb-2 mr-4">
            <div>
              <img class="rounded-full" src="https://picsum.photos/40/40?random=40" alt="">
            </div>
            <div class="ml-2">
              <div><%= @roomreview.id%></div>
              <div>2022年11月</div>
            </div>
          </div>
              <p><%= roomreview.id %></p>
        </div>
      </div> 
    </div>
  </div>

<% else %>
  <div>沒有此則評論</div>
<% end %>