<div class="w-full h-full bg-black ">
  <div class="container">
    <div class="rounded-lg px-8 py-6 mx-auto mt-4 text-left bg-white shadow-lg max-w-568">
      <div class="flex items-center justify-between mb-2">
        <div class="w-8"></div>
        <% # <img src="/assets/logo_small.png" alt="roomit" class="h-7"> %>
        <p class="text-lg font-medium text-gray-700">註冊與登入</p>
        <button class="w-8 h-8 rounded-full hover:bg-gray-200">
        <i class="text-2xl text-gray-700 i-center fa-solid fa-xmark "></i>
        </button>
      </div>

      <form action="/users" method="POST">
      <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
              <div class="mt-4">
                <label class="block" for="email">電子信箱<label>
                <input id="email "name="user[email]" type="email"  placeholder="輸入電子信箱" 
                class="input">
              </div>
              <div class="mt-4">
                <label class="block">密碼<label>
                <input id="password "name="user[password]"  type="password" placeholder="輸入密碼"
                class="input">
              </div>
              <div class="mt-4">
                <label class="block">確認密碼<label>
                <input id="password_confirm" name="user[password_confirmation]"  type="password" placeholder="再次輸入密碼"
                class="input">
              </div>
              
              <span class="hidden text-xs text-red-600 ">密碼必須相同！</span>

              <button type="submit" name="commit" value="Sign up" data-disable-with="Sign up" class="w-full px-6 py-3 mt-4 text-white bg-pink-600 rounded-lg hover:bg-pink-800">繼續
              </button>
                
              <div class="relative flex items-center py-4">
                <div class="flex-grow border-t border-gray-300"></div>
                <span class="flex-shrink mx-4 text-gray-400">或</span>
                <div class="flex-grow border-t border-gray-300"></div>
              </div>

                <button class="flex items-center justify-between w-full px-6 py-3 text-gray-600 bg-white border border-gray-500 rounded-lg hover:bg-gray-200">
                  <i class="text-2xl fa-brands fa-facebook text-facebook "></i>
                  <p class="font-semibold">使用Facebook登入</p>
                  <div class="w-6"></div>
                </button>
                <button class="flex items-center justify-between w-full px-6 py-3 mt-4 text-gray-600 bg-white border border-gray-500 rounded-lg hover:bg-gray-200">
                  <i class="text-2xl fa-brands fa-google text-facebook "></i>
                  <p class="font-semibold">使用Google登入</p>
                  <div class="w-6"></div>
                </button>
                <button class="flex items-center justify-between w-full px-6 py-3 mt-4 text-gray-600 bg-white border border-gray-500 rounded-lg hover:bg-gray-200">
                  <i class="text-3xl text-black fa-brands fa-apple "></i>
                  <p class="font-semibold">使用Apple登入</p>
                  <div class="w-6"></div>
                </button>
                <button class="flex items-center justify-between w-full px-6 py-3 mt-4 text-gray-600 bg-white border border-gray-500 rounded-lg hover:bg-gray-200">
                  <i class="text-xl text-black fa-regular fa-envelope "></i>
                  <p class="font-semibold">使用Email登入</p>
                  <div class="w-6"></div>
                </button>
          </div>
      </form>
    </div>

  </div>
</div>